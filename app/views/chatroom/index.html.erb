<h4 class="ui center aligned icon header">
  <i class="circular orange coffee icon"></i>
  Friends
</h4>
<div class="ui two column grid">
    <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
        <div class="content">
        <div class="ui small feed" id="message-content">
            <% @messages.each do |msg| %>
                <div class="event">
                    <div class="content">
                        <div class="summary">
                            <%= msg.user.username %> : <%= msg.body %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
        </div>
        <div class="extra content">
            <%= form_with scope: :message,url:messages_path,class:"ui reply form",local:true do |f|%>
                <div class="field">
                    <div class="ui right icon input">
                        <%= f.text_field :body , placeholder:"Enter The Message" %>
                        <i class="bordered inverted  orange icon edit"></i>
                    </div>
                </div>
                
            <% end %>
        </div>
        </div>
    </div>
    <div class="four wide column ">
        <div class="ui fluid raised card chatbox">
            <div class="content">
            <div class="ui inverted vertical pointing menu">
                <a class="active item">
                    Home
                </a>
                <a class="item">
                    Messages
                </a>
                <a class="item">
                    Friends
                </a>
            </div>
        </div>
        </div>
    </div>
</div>